<% if resource.errors.any? %>
  <div id="error_explanation" 
       class="p-5 mb-6 bg-gradient-to-r from-red-900/30 to-pink-900/30 rounded-xl border-2 border-red-300/30 backdrop-blur-xl animate-fade-in overflow-hidden relative">
    

    <div class="absolute inset-0 pointer-events-none overflow-hidden opacity-30">
      <% 5.times do |i| %>
        <div class="absolute w-1 h-1 bg-red-300 rounded-full animate-float-multidirection" 
             style="top: <%= rand(10..90) %>%;
                    left: <%= rand(10..90) %>%;
                    animation-delay: <%= rand(0..5000) %>ms;
                    animation-duration: <%= rand(4000..8000) %>ms;">
        </div>
      <% end %>
    </div>
    

    <div class="flex items-center gap-3 mb-3">
      <svg class="w-6 h-6 text-red-300 animate-pulse-slow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <h2 class="text-xl font-bold text-red-300">
        <%= pluralize(resource.errors.count, "hata") %> nedeniyle işlem tamamlanamadı
      </h2>
    </div>
    

    <div class="w-full h-px bg-gradient-to-r from-transparent via-red-300/30 to-transparent mb-4"></div>
    

    <ul class="space-y-2">
      <% resource.errors.full_messages.each do |message| %>
        <li class="flex items-start gap-3 text-red-200 hover:text-red-100 transition-colors py-1.5 px-3 rounded-lg hover:bg-white/5">
          <svg class="w-5 h-5 text-red-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h10M7 16h10" />
          </svg>
          <%= message %>
        </li>
      <% end %>
    </ul>
    

    <div class="mt-4 pt-3 border-t border-red-500/20">
      <p class="text-red-200/70 text-sm flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Lütfen yukarıdaki hataları düzeltin ve tekrar deneyin
      </p>
    </div>
  </div>
<% end %> 