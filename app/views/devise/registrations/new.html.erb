<div class="relative min-h-screen flex items-center justify-center py-12">
  <!-- Arka plan gradyeni -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900/95 via-blue-900/90 to-indigo-900/95 -z-10"></div>
  
  <!-- Animasyonlu Parçacıklar -->
  <div class="absolute inset-0 opacity-30 pointer-events-none">
    <% 25.times do |i| %>
      <div class="absolute w-<%= rand(1..2) %> h-<%= rand(1..2) %> bg-<%= ['cyan', 'purple', 'indigo', 'blue'].sample %>-300/80 rounded-full animate-float-multidirection" 
           style="top: <%= rand(10..90) %>%;
                  left: <%= rand(10..90) %>%;
                  animation-delay: <%= rand(0..8000) %>ms;
                  animation-duration: <%= rand(8000..15000) %>ms;
                  transform-origin: <%= rand(360) %>deg">
      </div>
    <% end %>
    
    <!-- Parlayan yıldızlar efekti -->
    <% colors = ['white', 'cyan', 'purple', 'indigo', 'blue'] %>
    <% 10.times do |i| %>
      <% color = colors.sample %>
      <% scale = rand(50..100) / 100.0 %>
      <div class="star absolute animate-bling star-<%= color %>"
           style="top: <%= rand(5..95) %>%;
                  left: <%= rand(5..95) %>%;
                  transform: rotate(35deg) scale(<%= scale %>);
                  animation-delay: <%= rand(0..6000) %>ms;
                  animation-duration: <%= rand(3000..6000) %>ms;">
      </div>
    <% end %>
  </div>

  <div class="w-full max-w-md mx-4 relative z-10">
    <!-- Logo & Title -->
    <div class="mb-8 flex flex-col items-center">
      <div class="relative group mb-4">
        <svg class="w-16 h-16 text-purple-300 animate-pulse-slow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 14v7l-9-11h7v-7l9 11h-7z" class="text-cyan-400"/>
        </svg>
        <div class="absolute -inset-2 bg-purple-400/20 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
      </div>
      <h1 class="text-4xl font-black bg-clip-text text-transparent bg-gradient-to-br from-purple-300 via-cyan-400 to-purple-300 mb-2 leading-tight animate-hologram drop-shadow-[0_0_10px_rgba(103,232,249,0.3)]">
        Yeni Hesap Oluştur
      </h1>
      <p class="text-cyan-200 text-lg max-w-sm text-center">
        Etkinliklere katılmak ve düzenlemek için hesap oluşturun
      </p>
    </div>
    
    <!-- Form Card -->
    <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-8 border-2 border-white/15 hover:border-purple-300/40 transition-all duration-500 shadow-2xl hover:shadow-purple-400/20">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-5">
          <!-- Name Field -->
          <div class="form-group">
            <%= f.label :name, "Ad Soyad", class: "block text-lg font-medium text-purple-300 mb-2" %>
            <div class="relative group">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", 
                  class: "w-full px-5 py-4 bg-white/10 border-2 border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-purple-300 focus:border-purple-300 backdrop-blur-lg",
                  placeholder: "Adınız Soyadınız" %>
              <div class="absolute bottom-0 left-0 h-0.5 w-0 bg-gradient-to-r from-purple-300 to-cyan-400 group-hover:w-full transition-all duration-500"></div>
            </div>
          </div>
          
          <!-- Email Field -->
          <div class="form-group">
            <%= f.label :email, "E-posta", class: "block text-lg font-medium text-purple-300 mb-2" %>
            <div class="relative group">
              <%= f.email_field :email, autocomplete: "email", 
                  class: "w-full px-5 py-4 bg-white/10 border-2 border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-purple-300 focus:border-purple-300 backdrop-blur-lg",
                  placeholder: "ornek@mail.com" %>
              <div class="absolute bottom-0 left-0 h-0.5 w-0 bg-gradient-to-r from-purple-300 to-cyan-400 group-hover:w-full transition-all duration-500"></div>
            </div>
          </div>

          <!-- Password Field -->
          <div class="form-group">
            <%= f.label :password, "Şifre", class: "block text-lg font-medium text-purple-300 mb-2" %>
            <div class="relative group">
              <%= f.password_field :password, autocomplete: "new-password", 
                  class: "w-full px-5 py-4 bg-white/10 border-2 border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-purple-300 focus:border-purple-300 backdrop-blur-lg",
                  placeholder: "••••••••" %>
              <div class="absolute bottom-0 left-0 h-0.5 w-0 bg-gradient-to-r from-purple-300 to-cyan-400 group-hover:w-full transition-all duration-500"></div>
            </div>
            <% if @minimum_password_length %>
              <p class="text-sm text-white/70 mt-2 flex items-center gap-2">
                <svg class="w-4 h-4 text-purple-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                En az <%= @minimum_password_length %> karakter
              </p>
            <% end %>
          </div>

          <!-- Password Confirmation Field -->
          <div class="form-group">
            <%= f.label :password_confirmation, "Şifre Tekrar", class: "block text-lg font-medium text-purple-300 mb-2" %>
            <div class="relative group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                  class: "w-full px-5 py-4 bg-white/10 border-2 border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-purple-300 focus:border-purple-300 backdrop-blur-lg",
                  placeholder: "••••••••" %>
              <div class="absolute bottom-0 left-0 h-0.5 w-0 bg-gradient-to-r from-purple-300 to-cyan-400 group-hover:w-full transition-all duration-500"></div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-3">
            <%= f.submit "Kayıt Ol", 
                class: "w-full px-6 py-4 bg-gradient-to-r from-purple-400 to-indigo-500 hover:from-purple-300 hover:to-indigo-400 text-white font-bold rounded-xl transition-all duration-300 shadow-lg hover:shadow-purple-300/30 border border-white/10 text-lg tracking-wide backdrop-blur-lg moving-gradient" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 border-t border-white/10 pt-6">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <p class="text-white/70">Zaten hesabınız var mı?</p>
          <%= link_to new_user_session_path, class: "text-white bg-white/10 hover:bg-white/20 px-5 py-2 rounded-xl transition-all flex items-center gap-2 group w-full sm:w-auto justify-center" do %>
            <svg class="w-5 h-5 text-purple-300 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14"></path>
            </svg>
            <span>Giriş Yap</span>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Back to Home Link -->
    <div class="mt-8 text-center">
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-cyan-300 hover:text-cyan-200 font-medium transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Anasayfaya Dön
      <% end %>
    </div>
  </div>
</div> 