<footer class="bg-white/5 backdrop-blur-xl border-t border-white/10 mt-24 relative overflow-hidden">
  <!-- Animated particles in footer -->
  <div class="absolute inset-0 opacity-20 pointer-events-none">
    <% 20.times do |i| %>
      <div class="absolute w-<%= rand(1..2) %> h-<%= rand(1..2) %> bg-<%= ['cyan', 'purple', 'indigo', 'blue'].sample %>-300 rounded-full animate-float-multidirection" 
           style="top: <%= rand(10..90) %>%;
                  left: <%= rand(10..90) %>%;
                  animation-delay: <%= rand(0..8000) %>ms;
                  animation-duration: <%= rand(8000..15000) %>ms;
                  transform-origin: <%= rand(360) %>deg">
      </div>
    <% end %>
  </div>
  
  <!-- Decorative divider -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-cyan-400/30 to-transparent"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Logo & Açıklama -->
      <div class="space-y-6">
        <%= link_to root_path, class: "flex items-center group" do %>
          <div class="relative mr-2 group">
            <svg class="w-8 h-8 text-cyan-300 animate-pulse-slow animate-hologram" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 14v7l-9-11h7v-7l9 11h-7z" class="text-purple-400"/>
          </svg>
            <div class="absolute -inset-1 bg-cyan-400/10 rounded-full blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-1000"></div>
          </div>
          <span class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-300 via-cyan-400 to-purple-300 animate-hologram">Unizone</span>
        <% end %>
        <p class="text-white/70 text-sm leading-relaxed">
          Şehrinizin en özel etkinliklerini keşfedin. Yeni deneyimler ve unutulmaz anlar için UNIZONE sizi bekliyor!
        </p>
        <div class="flex items-center space-x-4 pt-2">
          <a href="#" class="w-9 h-9 rounded-full bg-white/10 flex items-center justify-center text-cyan-300 hover:bg-cyan-400/20 hover:text-white transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
          <a href="#" class="w-9 h-9 rounded-full bg-white/10 flex items-center justify-center text-cyan-300 hover:bg-cyan-400/20 hover:text-white transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="#" class="w-9 h-9 rounded-full bg-white/10 flex items-center justify-center text-cyan-300 hover:bg-cyan-400/20 hover:text-white transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Hızlı Linkler -->
      <div class="space-y-4">
        <h3 class="text-white font-medium mb-4 flex items-center gap-2">
          <div class="w-1.5 h-5 bg-gradient-to-b from-cyan-300 to-purple-400 rounded"></div>
          Hızlı Erişim
        </h3>
      <div class="space-y-3">
          <%= link_to explore_events_path, class: "flex items-center gap-2 text-white/70 hover:text-cyan-300 transition-all group" do %>
            <svg class="w-4 h-4 text-cyan-400/50 group-hover:text-cyan-300 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span>Tüm Etkinlikler</span>
          <% end %>
          
          <%= link_to new_event_path, class: "flex items-center gap-2 text-white/70 hover:text-cyan-300 transition-all group" do %>
            <svg class="w-4 h-4 text-cyan-400/50 group-hover:text-cyan-300 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span>Yeni Etkinlik Ekle</span>
          <% end %>
          
          <%= link_to faq_path, class: "flex items-center gap-2 text-white/70 hover:text-cyan-300 transition-all group" do %>
            <svg class="w-4 h-4 text-cyan-400/50 group-hover:text-cyan-300 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span>Sık Sorulan Sorular</span>
          <% end %>
          
          <%= link_to '#', class: "flex items-center gap-2 text-white/70 hover:text-cyan-300 transition-all group" do %>
            <svg class="w-4 h-4 text-cyan-400/50 group-hover:text-cyan-300 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span>Hakkımızda</span>
          <% end %>
        </div>
      </div>

      <!-- Kategoriler -->
      <div class="space-y-4">
        <h3 class="text-white font-medium mb-4 flex items-center gap-2">
          <div class="w-1.5 h-5 bg-gradient-to-b from-cyan-300 to-purple-400 rounded"></div>
          Popüler Kategoriler
        </h3>
        <div class="flex flex-wrap gap-2">
          <% ['Müzik', 'Teknoloji', 'Sanat', 'Spor', 'Eğitim', 'Konser'].each do |category| %>
            <span class="inline-flex px-3 py-1 bg-white/10 text-cyan-200 text-xs rounded-full hover:bg-cyan-400/20 transition-all cursor-pointer">
              <%= category %>
            </span>
          <% end %>
        </div>
      </div>

      <!-- İletişim -->
      <div class="space-y-4">
        <h3 class="text-white font-medium mb-4 flex items-center gap-2">
          <div class="w-1.5 h-5 bg-gradient-to-b from-cyan-300 to-purple-400 rounded"></div>
          İletişim
        </h3>
      <div class="space-y-3">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-cyan-300 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-white/70">info@unizone.com</span>
          </div>
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-cyan-300 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="text-white/70">+90 555 555 55 55</span>
          </div>
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-cyan-300 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-white/70">Balıkesir, Türkiye</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Abone Ol Bölümü -->
    <div class="mt-12 pt-8 border-t border-white/10">
      <div class="flex flex-col md:flex-row items-center gap-6 justify-between">
        <div class="max-w-md">
          <h4 class="text-white font-medium mb-2">Etkinlik Bilgilendirmeleri</h4>
          <p class="text-white/60 text-sm">Yeni etkinlikler ve duyurular için abone olun.</p>
        </div>
        <div class="w-full md:w-auto flex-1 max-w-md">
          <div class="relative">
            <input type="email" placeholder="E-posta adresinizi girin" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:ring-2 focus:ring-cyan-300 focus:border-cyan-300">
            <button class="absolute right-1 top-1 px-4 py-2 bg-gradient-to-r from-cyan-500 to-purple-500 text-white rounded-lg hover:from-cyan-400 hover:to-purple-400 transition-all">
              Abone Ol
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Alt Bilgi -->
    <div class="mt-12 pt-6 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/40 text-sm">
        &copy; <%= Time.current.year %> Unizone. Tüm hakları saklıdır.
      </p>
      <div class="flex items-center gap-6">
        <a href="#" class="text-white/40 hover:text-cyan-300 text-sm transition-all">Gizlilik Politikası</a>
        <a href="#" class="text-white/40 hover:text-cyan-300 text-sm transition-all">Şartlar ve Koşullar</a>
        <a href="#" class="text-white/40 hover:text-cyan-300 text-sm transition-all">Yardım</a>
      </div>
    </div>
  </div>
</footer> 