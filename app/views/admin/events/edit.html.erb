<div class="relative min-h-screen">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900/95 via-blue-900/90 to-indigo-900/95 -z-10"></div>
  
  <!-- Parallax Particles - Daha hafif -->
  <div class="absolute inset-0 opacity-20 -z-5">
    <% 15.times do |i| %>
      <div class="absolute w-1.5 h-1.5 bg-cyan-300/70 rounded-full animate-float-slow" 
           style="top: <%= rand(-10..110) %>%;
                  left: <%= rand(-5..105) %>%;
                  animation-delay: <%= rand(0..5000) %>ms;
                  animation-duration: <%= rand(8000..15000) %>ms;">
      </div>
    <% end %>
  </div>

  <div class="max-w-4xl mx-auto px-4 py-16 relative z-10">
    <!-- Header & Logo -->
    <div class="mb-8 flex flex-col items-center">
      <div class="relative group mb-4">
        <svg class="w-16 h-16 text-cyan-300 animate-pulse-slow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 14v7l-9-11h7v-7l9 11h-7z" class="text-purple-400"/>
        </svg>
        <div class="absolute -inset-2 bg-cyan-400/20 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
      </div>
      <h1 class="text-4xl font-black bg-clip-text text-transparent bg-gradient-to-br from-cyan-300 via-cyan-400 to-purple-300 mb-2 leading-tight drop-shadow-[0_0_10px_rgba(103,232,249,0.3)]">
        Etkinliği Düzenle <span class="text-white/80">(Admin)</span>
      </h1>
      <p class="text-cyan-200 text-lg max-w-xl text-center mb-6">
        Etkinlik detaylarını güncelleyerek katılımcılara en doğru bilgileri sunun
      </p>
    </div>

    <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-8 border-2 border-white/15 hover:border-cyan-300/40 transition-all duration-500 shadow-2xl hover:shadow-cyan-400/20">
      <%= render "form", event: @event %>

      <div class="mt-8 flex items-center justify-between flex-wrap gap-4">
        <%= link_to admin_events_path, class: "flex items-center gap-2 text-cyan-300 hover:text-cyan-400 transition-colors group" do %>
          <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span>Admin Paneline Dön</span>
        <% end %>

        <%= link_to admin_event_path(@event), class: "text-cyan-300 hover:text-cyan-400 transition-colors flex items-center gap-2 group" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <span class="group-hover:translate-x-1 transition-transform">Etkinlik Detaylarına Git</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/delete_confirmation_modal' %> 